<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="de.hausknecht.master.frameworksanddrivers.ui.menu.MenuOverlay" fx:id="menuOverlay">

    <StackPane>
        <VBox VBox.vgrow="ALWAYS">
            <Label fx:id="statusPoints" styleClass="statusPoints">Punktzahl: </Label>
        </VBox>
        <Button fx:id="closeButton" styleClass="mainButtons">
            <graphic>
                <ImageView fitWidth="20" fitHeight="20" preserveRatio="true">
                    <Image url="/packaging/icons/close.png"/>
                </ImageView>
            </graphic>
        </Button>
    </StackPane>

    <ScrollPane fitToWidth="true" fitToHeight="true" pannable="true">
        <VBox>
            <!-- Kapitel 0 -->
            <Label styleClass="navLabels, newChapters">0. Allgemein</Label>
            <Button styleClass="navButtons" fx:id="batchNavigation">
                0.1 Batches
            </Button>
            <Button styleClass="navButtons" onAction="#loadContent">
                <userData>chapterZero/introduction.json</userData>
                0.2 Einführung in die Lernsoftware
            </Button>

            <!-- Kapitel 1 -->
            <Label styleClass="navLabels, newChapters">1. Grundlagen</Label>
            <Label styleClass="subchapter, secondRow">1.1 Begriffsdefinitionen</Label>
            <Button styleClass="navButtons, thirdRow" onAction="#loadContent">
                <userData>chapterOne/alphabet.json</userData>
                1.1.1 Alphabet, formale Sprachen und Grammatiken
            </Button>
            <Button styleClass="navButtons, thirdRow" onAction="#loadContent">
                <userData>chapterOne/automata.json</userData>
                1.1.2 Deterministische und nichtdeterministische endliche Automaten
            </Button>
            <Button styleClass="navButtons" onAction="#loadContent">
                <userData>chapterOne/graphicalAutomata.json</userData>
                1.2 Grafische Repräsentation von Automaten
            </Button>

            <!-- Kapitel 2 -->
            <Label styleClass="navLabels, newChapters">2. Formale Repräsentation der Grundlagen</Label>
            <Button styleClass="navButtons" onAction="#loadContent">
                <userData>chapterTwo/alphabet.json</userData>
                2.1 Alphabet
            </Button>
            <Button styleClass="navButtons" onAction="#loadContent">
                <userData>chapterTwo/languages.json</userData>
                2.2 Formale Sprachen
            </Button>
            <Button styleClass="navButtons" onAction="#loadContent">
                <userData>chapterTwo/grammar.json</userData>
                .3 Grammatik
            </Button>
            <Button styleClass="navButtons" onAction="#loadContent">
                <userData>chapterTwo/dea.json</userData>
                2.4 DEA
            </Button>
            <Button styleClass="navButtons" onAction="#loadContent">
                <userData>chapterTwo/nea.json</userData>
                2.5 NEA
            </Button>

            <!-- Kapitel 3 -->
            <Label styleClass="navLabels, newChapters">3. Definitionen und Regeln</Label>
            <Label styleClass="subchapter, secondRow">3.1 Verknüpfung von Wörtern und Sprachen</Label>
            <Button styleClass="navButtons, thirdRow" onAction="#loadContent">
                <userData>chapterThree/words.json</userData>
                3.1.1 Wortebene
            </Button>
            <Button styleClass="navButtons, thirdRow" onAction="#loadContent">
                <userData>chapterThree/language.json</userData>
                3.1.2 Sprachebene
            </Button>
            <Button styleClass="navButtons" onAction="#loadContent">
                <userData>chapterThree/accepting.json</userData>
                3.2 akzeptierend und erzeugend
            </Button>
            <Button styleClass="navButtons" onAction="#loadContent">
                <userData>chapterThree/closure.json</userData>
                3.3 Abgeschlossenheit von Sprachklassen
            </Button>

            <!-- Kapitel 4 -->
            <Label styleClass="navLabels, newChapters">4. Automatenkonstruktion</Label>
            <Button styleClass="navButtons" onAction="#loadContent">
                <userData>chapterFour/constructionDEA.json</userData>
                4.1 Konstruktion eines DEA
            </Button>
            <Button styleClass="navButtons" onAction="#loadContent">
                <userData>chapterFour/constructionNEA.json</userData>
                4.2 Konstruktion eines NEA
            </Button>
            <Button styleClass="navButtons" onAction="#loadContent">
                <userData>chapterFour/potency.json</userData>
                4.3 Potenzmengenkonstruktion
            </Button>
            <Label styleClass="subchapter, secondRow">4.4 Abschlusseigenschaften</Label>
            <Button styleClass="navButtons, thirdRow" onAction="#loadContent">
                <userData>chapterFour/union.json</userData>
                4.4.1 Vereinigung
            </Button>
            <Button styleClass="navButtons, thirdRow" onAction="#loadContent">
                <userData>chapterFour/complement.json</userData>
                4.4.2 Komplement
            </Button>
            <Button styleClass="navButtons, thirdRow" onAction="#loadContent">
                <userData>chapterFour/section.json</userData>
                4.4.3 Schnitt
            </Button>
            <Button styleClass="navButtons, thirdRow" onAction="#loadContent">
                <userData>chapterFour/concatenation.json</userData>
                4.4.4 Konkatenation
            </Button>
            <Button styleClass="navButtons, thirdRow" onAction="#loadContent">
                <userData>chapterFour/star.json</userData>
                4.4.5 Kleene-Stern
            </Button>

            <!-- Spezialübungen -->
            <Label styleClass="navLabels, newChapters">5. Zusatz</Label>
            <HBox>
                <Button styleClass="navButtons" fx:id="specialExercise">
                    <userData>chapterFive/specialExercises.json</userData>
                    5.1 Spezialübungen (500 Punkte)
                </Button>
                <ImageView fitWidth="23" fitHeight="23" preserveRatio="true" styleClass="lockImage" fx:id="lockImage">
                    <Image url="/packaging/icons/lock.png"/>
                </ImageView>
            </HBox>
        </VBox>
    </ScrollPane>
</VBox>