<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="de.hausknecht.master.frameworksanddrivers.ui.content.simulation.specification.TransitionContainer"
      styleClass="sectionContainer">

    <HBox styleClass="sectionHeading">
        <Label>Transitionen</Label>
    </HBox>

    <ScrollPane styleClass="sectionScrollPane" fitToWidth="true">
        <VBox fx:id="listElementContainer" spacing="3"/>
    </ScrollPane>

    <VBox spacing="7">
        <HBox>
            <TextField fx:id="transitionWord" HBox.hgrow="ALWAYS" styleClass="transitionWord" promptText="Transitionswort"/>
        </HBox>
        <HBox spacing="7">
            <ComboBox fx:id="fromTransition" HBox.hgrow="ALWAYS" maxWidth="Infinity" prefWidth="0" styleClass="comboBox" promptText="von"/>
            <ComboBox fx:id="toTransition" HBox.hgrow="ALWAYS" maxWidth="Infinity" prefWidth="0" styleClass="comboBox" promptText="nach"/>
            <Button fx:id="addButton" styleClass="addButton">+</Button>
        </HBox>
    </VBox>
</VBox>